{
    "extends":  "@nukleo/typescript-config/nextjs.json",
    "compilerOptions":  {
                            "skipLibCheck": true,
                            "types": [],
                            "paths":  {
                                          "@/*":  [
                                                      "./*"
                                                  ],
                                          "@nukleo/ui":  [
                                                             "../../packages/ui/src"
                                                         ],
                                          "@nukleo/db":  [
                                                             "../../packages/db/src"
                                                         ],
                                          "@nukleo/commercial":  [
                                                                     "../../packages/commercial/src"
                                                                 ]
                                      }
                        },
    "include":  [
                    "next-env.d.ts",
                    "**/*.ts",
                    "**/*.tsx",
                    ".next/types/**/*.ts"
                ],
    "exclude":  [
                    "node_modules",
                    "**/*.test.ts",
                    "**/*.test.tsx",
                    "**/__tests__/**",
                    "vitest.config.ts",
                    "vitest.setup.ts"
                ]
}
